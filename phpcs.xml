<?xml version="1.0"?>
<ruleset name="Gravity Forms Repeater Field">
	<description>WordPress Coding Standards for Gravity Forms Repeater Field Plugin</description>

	<!-- Include the WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax and disable Yoda conditions to match project style. -->
		<exclude name="WordPress.PHP.DisallowShortArraySyntax"/>
		<exclude name="WordPress.PHP.YodaConditions"/>
		<!-- Ignore filename casing rules due to autoloading and upstream naming. -->
		<exclude name="WordPress.Files.FileName"/>
		<!-- Indentation varies in upstream files; do not enforce tabs-only indentation. -->
		<exclude name="Generic.WhiteSpace.DisallowSpaceIndent"/>
		<!-- Third-party object properties (e.g., GF field objects) are camelCase; allow them. -->
		<exclude name="WordPress.NamingConventions.ValidVariableName"/>
	</rule>

	<!-- Allow short array syntax [] (backup for non-WPCS sniffs). -->
	<rule ref="Generic.Arrays.DisallowShortArraySyntax"><severity>0</severity></rule>

	<!-- Exclude some rules that are not applicable -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" value="gf_repeater_field,GF_Repeater_Field"/>
		</properties>
	</rule>

	<!-- Set minimum PHP version -->
	<config name="minimum_supported_wp_version" value="5.0"/>
	<config name="testVersion" value="7.4-"/>

	<!-- File paths to check -->
	<file>.</file>

	<!-- Exclude vendor and node_modules -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>
</ruleset>
